<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPhotoPS"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUsernamePS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivPersonMarkerPS"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="UserName" />

    <ImageView
        android:id="@+id/ivLocationMarkerPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/ivPhotoPS"
        app:layout_constraintTop_toBottomOf="@+id/tvUsernamePS"
        app:srcCompat="@drawable/ic_baseline_location_on_gray" />

    <TextView
        android:id="@+id/tvLocationPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/ivLocationMarkerPS"
        app:layout_constraintTop_toTopOf="@+id/ivLocationMarkerPS"
        tools:text="Location Name Here!" />

    <ImageView
        android:id="@+id/ivPersonMarkerPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/ivPhotoPS"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_gray" />

    <RatingBar
        android:id="@+id/ratingBarPS"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationPS" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/ivPhotoPS"
        app:layout_constraintTop_toBottomOf="@+id/ivLocationMarkerPS"
        app:srcCompat="@drawable/ic_baseline_stars_24" />

    <TextView
        android:id="@+id/tvDescriptionPS"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/ivPhotoPS"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:text="The post description starts here!" />

</androidx.constraintlayout.widget.ConstraintLayout>