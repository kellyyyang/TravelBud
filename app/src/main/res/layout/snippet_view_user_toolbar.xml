<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="50dp"
        android:background="#0099ff"
        android:layout_width="match_parent"
        android:id="@+id/viewContactsToolbar">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search Users"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />


                <ImageView
                    android:id="@+id/ivSearchIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="50dp"
                    android:layout_toStartOf="@id/ivExploreIcon"
                    android:src="@drawable/ic_search_button" />

                <ImageView
                    android:id="@+id/ivExploreIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    app:srcCompat="@drawable/ic_baseline_explore_24" />

            </RelativeLayout>


        </Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


</merge>